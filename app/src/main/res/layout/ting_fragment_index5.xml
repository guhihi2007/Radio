<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        app:layout_constraintBottom_toTopOf="@+id/setting_header_ll"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="50dip"
        android:layout_width="match_parent"
        android:id="@+id/title_cl"
        layout="@layout/ting_layout_common_title_text"/>

    <RelativeLayout
        android:visibility="visible"
        android:background="@color/color_theme_"
        android:id="@+id/setting_header_ll"
        app:layout_constraintTop_toBottomOf="@+id/title_cl"
        android:layout_width="match_parent"
        android:layout_height="170dip">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@mipmap/ic_launcher"
                android:layout_width="80dip"
                android:layout_height="80dip" />

            <TextView
                android:id="@+id/app_version_name_tv"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:text="V1.0"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="30dip" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/setting_header_ll"
        android:id="@+id/setting_ll1"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dip">

        <TextView
            android:textColor="@color/color_20"
            android:text="检测更新"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:id="@+id/line1"
        app:layout_constraintTop_toBottomOf="@+id/setting_ll1"
        android:background="@color/color_e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"/>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/line1"
        android:id="@+id/setting_ll2"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dip">

        <TextView
            android:textColor="@color/color_20"
            android:text="看书专区"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:id="@+id/line2"
        app:layout_constraintTop_toBottomOf="@+id/setting_ll2"
        android:background="@color/color_e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"/>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/line2"
        android:id="@+id/setting_ll3"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dip">

        <TextView
            android:textColor="@color/color_20"
            android:text="热门听书"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:id="@+id/line3"
        app:layout_constraintTop_toBottomOf="@+id/setting_ll3"
        android:background="@color/color_e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"/>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/line3"
        android:id="@+id/setting_ll4"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dip">

        <TextView
            android:textColor="@color/color_20"
            android:text="意见反馈"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        app:layout_constraintTop_toBottomOf="@+id/setting_ll4"
        android:id="@+id/lin4"
        android:background="@color/color_e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"/>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/setting_ll4"
        android:id="@+id/setting_ll5"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="50dip">

        <TextView
            android:id="@+id/sleep_text_tv"
            android:textColor="@color/color_20"
            android:text="睡眠模式"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        app:layout_constraintTop_toBottomOf="@+id/setting_ll5"
        android:background="@color/color_e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"/>


</android.support.constraint.ConstraintLayout>