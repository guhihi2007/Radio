<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/right_line"
        app:layout_constraintLeft_toRightOf="@+id/classify_items_name_tv"
        android:background="@color/color_f2"
        android:layout_width="0.55dp"
        android:layout_height="40dip"/>

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/right_line"
        android:textSize="12sp"
        android:text="text"
        android:textColor="@color/text_78"
        android:gravity="center"
        android:id="@+id/classify_items_name_tv"
        android:layout_width="0dip"
        android:layout_height="40dip" />



    <View
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classify_items_name_tv"
        android:background="@color/color_f2"
        android:layout_height="0.55dp"
        android:layout_width="match_parent"/>

</android.support.constraint.ConstraintLayout>